{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "express"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "./dist",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "*.ts",            // Includes TypeScript files in the root
    "controllers/**/*",
    "middlewares/**/*",
    "types.d.ts"
  ],
  "exclude": ["node_modules"]
}
