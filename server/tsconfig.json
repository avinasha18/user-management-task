{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "types": ["node", "express"],  // Include necessary types here
    "typeRoots": ["./node_modules/@types"]  // Point to where type definitions are located
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
